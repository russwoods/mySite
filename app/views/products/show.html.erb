<article class="container products-show">
	<h1>Your Product:</h1>
	<p id="notice"><%= notice %></p>

    <section class="row">
		<div class="col-sm-6 img">
			<%= image_tag(@product.image_url, class: "img-fluid") %>
		</div>

		<section class="col-sm-6 products-info">
			<p>
				<strong>Name:</strong>
				<%= @product.name %>
			</p>
            


			<p>
				<strong>Description:</strong>
				<%= @product.description %>
			</p>

			<p>
				<strong>Color:</strong>
				<%= @product.color %>
			</p>

			<p>
				<strong>Price:</strong>
				<%= @product.price %>
			</p>
                <%= form_with(url: '/payments/create') do |form| %>
                <%= hidden_field_tag(:product_id, @product.id) %>
                <%= render partial: "devise/shared/stripe_checkout_button" %>
                <% end %>
            <div>

            </div>

			<p>
				<%= link_to 'Edit', edit_product_path(@product) %>
				|
				<%= link_to 'Back', products_path %>
			</p>
		</section>
		<!-- /col-sm-6 -->
	</section>
	<!-- /row -->

</article>

