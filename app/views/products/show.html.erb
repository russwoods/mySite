<p id="notice"><%= notice %></p>

    <h1>Your Product:</h1>

      <p>
        <strong>Name:</strong>
        <%= @product.name %>
      </p>

      <p>
        <strong>Description:</strong>
        <%= @product.description %>
      </p>

      <p>
      <%= image_tag(@product.image_url, class: "img-fluid") %>
      </p> 

      <p>
        <strong>Color:</strong>
        <%= @product.color %>
      </p>

      <p>
        <strong>Price:</strong>
        <%= @product.price %>
      </p>
        
        <%= form_with(url: '/payments/create') do |form| %>
        <%= hidden_field_tag(:product_id, @product.id) %>
        <%= render partial: "devise/shared/stripe_checkout_button" %>
        <% end %>        

