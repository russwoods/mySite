<section class="container">
	<p id="notice"><%= notice %></p>
	<h1><%= @product.name %></h1>

<div class="row" data-product-id="<%= @product.id %>">
	<div class="col-sm-12 col-md-6">
  	<p>
    	<%= image_tag(@product.image_url, class: "img-fluid img-zoom", data_zoom_image: "@product.product_image.url") if @product.image_url%>
		</p>	
  </div> <!-- /column image-->    

	<div class="col-sm-12 col-md-6">  
		<p>Average Rating: <div class="rated" id="average-rating" data-score="<%= @product.average_rating %>"></div> </p>      
		<% cache @product do %>
		<p>
			<strong>Name:</strong>
			<%= @product.name %>
		</p>
		<% end %>    
		<p>
			<strong>Description:</strong>
			<%= @product.description %>
		</p>
		<p>
			<strong>Color:</strong>
			<%= @product.color %>
		</p>
		<p>
			<strong>Price:</strong>
			<%= @product.price %>
		</p>
		<p>
			<%= form_with(url: '/payments/create') do |form| %>
			<%= hidden_field_tag(:product_id, @product.id) %>
			<%= render partial: "shared/stripe_checkout_button" %>
			<% end %>      
    </p>
	</div> <!-- /column text-->

	<div class="col-sm-12 col-md-6">
		<%= render 'new_comment' %>
	</div>
</div> <!-- /row-->	
  
	<div class="alert alert-info" style="display:none" role="alert">
		A new comment was posted!
	</div>
	<div class="product-reviews">
		<%= render 'comments' %>
		<%= will_paginate @comments %>
	</div>

  <% if signed_in? %>
  	<%= link_to 'Edit', edit_product_path(@product) %> |
  <% end %>
    
	<%= link_to 'Back', products_path %>

</section>

