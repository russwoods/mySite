<div class="col-sm">
	<%= link_to product do %>  
		<h2><%= product.name %></h2>
		<%= image_tag(product.image_url, class: "img-fluid") unless product.image_url.nil? %>
	<% end %>  
	<% cache product do %>  
		<p><strong>Color:</strong> <%= product.color %></p>           
		<p><strong>Description:</strong> <%= product.description %></p>
		<p><strong>Price:</strong> <%= product.price %></p>
	<% end %>  

	<% if current_user && current_user.admin %>
			<%= link_to 'Edit', edit_product_path(product), class: "btn btn-primary btn-sm" %> 
			<%= link_to 'Destroy', product, class: "btn btn-danger btn-sm", method: :delete, data: { confirm: 'Are you sure?' } %>
	<% end %>
</div><!-- /col -->

