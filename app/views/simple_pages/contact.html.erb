<div class="container">
  <h1>Contact Us</h1>
  <%= flash[:notice] %>
  <%= form_with(url:"/simple_pages/thank_you", method: "post", local: true) do |form| %>
      <div class="form-group">
        <%= form.label :name %>
        <%= form.text_field :name, class: "form-control", placeholder: "Your Name", required: true %>
      </div>
      <div class="form-group">
        <%= form.label :email %>
        <%= form.email_field :email, class: "form-control", placeholder: "Your Email", required: true %>
      </div>
      <div class="form-contol">
        <%= form.label :message %>
        <%= form.text_area :message, class: "form-control", placeholder: "Your Message", rows: 5, required: true %>
      </div>
    <%= form.submit "Send", class: "btn btn-outline-dark margin-25" %>
  <% end %>
</div>